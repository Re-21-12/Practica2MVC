@model IEnumerable<Perfiles_SA.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Ver Empleados</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Ingresar Empleado</a>
</p>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Empleadoes" asp-action="Index" method="get">
            <div class="form-group">
                <label>Buscar por Departamento:</label>
                <input type="text" name="buscarDepartamento" class="form-text" placeholder="Soporte" />
                <input type="submit" value="Buscar" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <form asp-controller="Empleadoes" asp-action="Index" method="get">
            <div class="form-group">
                <label>Fecha de Inicio:</label>
                <input type="date" name="fechaInicio" class="form-control" />
            </div>
            <div class="form-group">
                <label>Fecha de Fin:</label>
                <input type="date" name="fechaFin" class="form-control" />
            </div>
            <input type="submit" value="Filtrar por Fechas" class="btn btn-outline-primary" />
        </form>
    </div>
</div>

<table class="table table-striped table-dark">
    <!-- Resto del código... -->
</table>



<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngresoEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartamentoAsignado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaIngresoEmpresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartamentoAsignado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Dpi" class="btn btn-primary">Modificar</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Dpi" class="btn btn-info">Details</a>
                </td>
              
            </tr>
        }
    </tbody>
</table>
